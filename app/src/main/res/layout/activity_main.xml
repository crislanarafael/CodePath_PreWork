<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    android:id="@+id/parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello from Crislana!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:textSize="37sp"
         />

    <TextView
        android:id="@+id/changeTextColorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="#4d5596"
        android:padding="10dp"
        android:textColor="@color/white"
        android:text="Click to change text color"
        android:layout_alignParentBottom="true"
        android:textSize="25sp"
         />

    <TextView
        android:id="@+id/changeBackgroundColorButton"
        android:layout_above="@id/changeTextColorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="#4d5596"
        android:padding="10dp"
        android:textColor="@color/white"
        android:text="Click to change background color"
        android:textSize="19sp"
        />

    <TextView
        android:id="@+id/changeTextButton"
        android:layout_above="@id/changeBackgroundColorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="#4d5596"
        android:padding="10dp"
        android:textColor="@color/white"
        android:text="Click to change text label"
        android:textSize="25sp"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_above="@id/changeTextButton"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enteryour own text here!"
        />

    <TextView
        android:id="@+id/changeCustomTextButton"
        android:layout_above="@id/changeTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="#4d5596"
        android:padding="10dp"
        android:textColor="@color/white"
        android:text="Change text string"
        android:textSize="34sp"
        />

</RelativeLayout>